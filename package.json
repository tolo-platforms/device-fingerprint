{
  "name": "@tolo-platforms/device-fingerprint",
  "version": "0.1.0",
  "description": "Lightweight device fingerprinting for Tolo platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "keywords": [
    "fingerprint",
    "device",
    "browser",
    "identification"
  ],
  "author": "Tolo Platforms",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "jsdom": "^23.0.1",
    "lint-staged": "^16.2.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tolo-platforms/device-fingerprint.git"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "vitest related --run"
    ]
  }
}
